while [[ True ]]
do

echo "enter your name:"
read name
if [[ -z $name ]]
then
echo "bye"
break
else
echo $name
echo "enter your age:"
read age
fi
if [[ $age < 1 ]]
then
echo "bye"
break
elif [[ $age > 0 && $age < 17 ]]
then
echo "$age"
echo "$name, your group is child"
elif [[ $age > 16 && $age < 26 ]]
then
echo "$age"
echo "$name, your group is youth"
elif [[ $age > 25 ]]
then
echo "$age"
echo "$name, your group is adult"
fi
done
